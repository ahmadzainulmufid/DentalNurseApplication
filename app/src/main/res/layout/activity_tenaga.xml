<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.tenaga.TenagaActivity">

        <!-- Vector 1 -->
        <ImageView
            android:id="@+id/vector1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/vector11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tombol Back -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_circle"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:contentDescription="@string/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Teks galeri -->
        <TextView
            android:id="@+id/tv_galeri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:text="@string/tenaga"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="@id/btn_back"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/vector1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/tenaga_list"
                    android:layout_width="match_parent"
                    android:layout_height="465dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:padding="16dp"
                    android:text="1. drg. Ita Astit Karmawati, MARS\n2. drg. Rahaju Budiarti, MA.Kes\n3. drg. Dwi Priharti, M.Kes\n4. drg. Eka Anggreni, M.Kes\n5. Dr. drg. Jusuf Kristianto, MM, M.Kes\n6. drg. Nita Noviani, MKM\n7. drg. Siti Nurbayani, MKM\n8. drg. Vitri Nurilawaty, M.Kes\n9. Ngatemi, S.Si.T, MKM\n10. Emini, S.Si.T, MA.Kes\n11. Adelina Barus, S.Si.T, MA.Kes\n12. Indrayati Fadjeri, S.Si.T, M.Kes\n13. Ni Nyoman Kasihani, S.Si.T, M.Kes\n14. Rini Widiyastuti, S.Si.T, M.Kes\n15. Rikawarastuti, M.Kes\n16. drg. Ita Yulita, M.Kes\n17. Pudentina Rr RE, S.Pd, MKM\n18. Tedi Purnama, S.ST, M.Tr.Kes\n19. Erwin, M.Kes\n20. Syifa Yulia Lestari, M.Tr.Kes\n21. Rizki Sofian, AMKG, SKM\n22. Bimo G Sasongko, S.TKG\n23. Dewi Candra, AMKG, S.Si.T\n24. Sri Lestari, S.Pd\n25. M. Rifki Fanan, AMKG"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@id/card1"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
